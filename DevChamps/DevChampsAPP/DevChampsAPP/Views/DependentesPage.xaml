<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="DevChampsAPP.Views.DependentesPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             BackgroundColor="Black">

	<AbsoluteLayout Padding="0">
		<!--  MAIN IMAGE  -->
		<Image x:Name="img"
		       AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
		       AbsoluteLayout.LayoutFlags="All"
		       AnchorY="0"
		       Aspect="AspectFill"
		       Opacity=".10"
		       Source="depentendes.jpg"
		       TranslationY="-10" />

		<Grid AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
		      AbsoluteLayout.LayoutFlags="All"
		      RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="40*" />
			</Grid.RowDefinitions>

			<!--  TOP ROW  -->
			<StackLayout Grid.Row="0"
			             VerticalOptions="FillAndExpand"
			             Orientation="Vertical"
			             Padding="10"
			             Spacing="0" />


			<!--  BOTTOM ROW  -->
			<StackLayout Grid.Row="1"
			             VerticalOptions="End"
			             AbsoluteLayout.LayoutBounds="0, 1, 1, 1"
			             Orientation="Vertical"
			             Padding="0"
			             Spacing="0">

				<StackLayout Padding="0" Spacing="0">

					<StackLayout Padding="20,0,20,20">
						<!--  HEADERS  -->
						<Label VerticalOptions="End"
						       FontAttributes="Bold"
						       FontSize="30"
						       LineBreakMode="WordWrap"
						       Text="Você possui outros dependentes?"
						       TextColor="White" />

						<Label VerticalOptions="End"
						       FontAttributes="None"
						       LineBreakMode="WordWrap"
						       Text="Arraste para marcar a quantidade de dependentes."
						       TextColor="White" />

						<Slider Maximum="0" Minimum="5" />
					</StackLayout>
				</StackLayout>
			</StackLayout>
		</Grid>
	</AbsoluteLayout>
</ContentPage>